# OpenRouter API Configuration
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Model Configuration
# Available models: mistralai/mistral-7b-instruct:free, anthropic/claude-3-haiku, etc.
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free

# OpenRouter Provider (optional)
# Leave empty for automatic provider selection
OPENROUTER_PROVIDER=

# Sample file path for document processing
SAMPLE_FILE=sample2.txt

# ChromaDB persistence directory
CHROMA_DB_PATH=./chroma_db

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Flask configuration
PORT=5000
FLASK_ENV=development
FLASK_DEBUG=True

# Logging level
LOG_LEVEL=INFO
